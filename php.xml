<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false"
>

    <testsuites>

        <testsuite name="Darling Cms Redesign | Test Utilitiy Tests">
            <directory>Tests/Unit/TestUtilityTests</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Abstract Primary Tests">
            <directory>Tests/Unit/abstractions/primary</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Abstract Utility Tests">
            <directory>Tests/Unit/abstractions/utility</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Abstract Component Tests">
            <directory>Tests/Unit/abstractions/component</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Class  Primary Tests">
            <directory>Tests/Unit/classes/primary</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Class  Utility Tests">
            <directory>Tests/Unit/classes/utility</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Class  Component Tests">
            <directory>Tests/Unit/classes/component</directory>
        </testsuite>

    </testsuites>

</phpunit>
