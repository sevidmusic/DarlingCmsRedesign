         colors="true"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false"
>

    <testsuites>

        <testsuite name="Darling Cms Redesign | Core Tests">
            <directory>Tests</directory>
        </testsuite>


        <testsuite name="Darling Cms Redesign | Extension Tests">
            <directory>Extensions</directory>
        </testsuite>

        <testsuite name="Darling Cms Redesign | Factory Tests">
            <directory>Tests/Unit/abstractions/component/Factory</directory>
            <directory>Tests/Unit/classes/component/Factory</directory>
        </testsuite>

    </testsuites>

</phpunit>
